{
  "name": "cinefind",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "node-sass": "^4.12.0",
    "postcss": "^7.0.14",
    "postcss-cli": "^6.1.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-router-dom": "^5.0.0"
  },
  "devDependencies": {
    "react-scripts": "0.9.5"
  },
  "scripts": {
    "sass": "node-sass -w src/sass/main.scss public/css/main.min.css --output-style compressed",
    "prebuild:css": "node-sass --include-path src/sass/main.scss public/css/main.css",
    "build:css": "postcss --use autoprefixer -b 'last 2 versions' < public/css/main.css | postcss --use cssnano > public/css/main.min.css --no-map",
    "start": "NODE_PATH=./src react-scripts start",
    "build": "NODE_PATH=./src react-scripts build && npm run build:css",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  }
}
